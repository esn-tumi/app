{
  "name": "@tumi/party-animals",
  "private": true,
  "description": "Remix app for party animals registration and management",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "yarn prisma generate && yarn build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"yarn dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.3",
    "@prisma/client": "^4.5.0",
    "@remix-run/node": "^1.7.3",
    "@remix-run/react": "^1.7.3",
    "@remix-run/serve": "^1.7.3",
    "@tailwindcss/forms": "^0.5.3",
    "cross-env": "^7.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.3.0",
    "remix-auth-auth0": "1.4.0",
    "stripe": "^10.15.0",
    "v8n": "^1.5.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.3",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.5.0",
    "postcss": "^8.4.18",
    "prisma": "^4.5.0",
    "tailwindcss": "^3.2.1",
    "typescript": "~4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
